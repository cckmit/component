	<dubbo:reference id="iProductSV" interface="com.x.centra.product.api.product.interfaces.IProductSV"
					 registry="slpRegistry"/>
	<!-- 公共缓存 -->
	<dubbo:reference id="iCacheSV" interface="com.x.common.api.cache.interfaces.ICacheSV"
					 registry="slpRegistry"/>
	<!-- 组织机构用户 -->
